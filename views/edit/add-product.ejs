<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/addBook.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
       <main>
            <form method="POST" class="addBook searchForm" action="/add-product">
                <label for="title">Title</label>
                <input 
                type="text" 
                id="title" 
                name="title" 
                value="<% if (editMode) { %> <%= product.title %> <% }%>" >
                <label for="price">price</label>
                <input 
                type="text" 
                id="price" 
                name="price" 
                value="<% if (editMode) { %> <%= product.price %> <% }%>" >
                <label for="imgUrl">Image link</label>
                <input 
                type="text" 
                id="imgUrl" 
                name="imgUrl" 
                value="<% if (editMode) { %> <%= product.imgUrl %> <% }%>" >
                <label for="description">description</label>
                <textarea name="description" id="description" cols="50" rows="10">
                    <% if (editMode) { %> <%= product.description %> <% }%>
                </textarea>
                <input type="hidden" name="userId" value="<%= user._id %>">
                <input type="hidden" name="userId" value="<%= product._id %>">
                <button class="btn" type="submit">Add Product</button>
                
            </form>
        
       </main>

<%- include('../includes/end.ejs') %>